<Page
    x:Class="VolleMoehre.App.Shared.SpielEditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VolleMoehre.App.Shared"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <TextBox Header="Name" Text="{Binding Name, Mode=TwoWay}"/>
            <TextBox Header="Beschreibung" Text="{Binding Beschreibung, Mode=TwoWay}"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Speichern" Margin="0,24" Click="SaveButton_Click" x:Name="SaveButton"/>
                <Button Content="Abbrechen" Margin="24" Click="CancelButton_Click" x:Name="CancelButton"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
